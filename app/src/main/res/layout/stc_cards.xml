<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="95dp"
    android:background="@drawable/relative_layout_bg"
    android:layout_marginLeft="10sp"
    >

    <ImageView
        android:id="@+id/stc_logo"
        android:layout_width="95dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/stc_logo"/>

    <TextView
        android:id="@+id/tv_stc_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:layout_toRightOf="@+id/stc_logo"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_stc_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 km"
        android:textSize="17sp"
        android:layout_toRightOf="@+id/stc_logo"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5sp"
        android:layout_below="@+id/tv_stc_location"
        />




</RelativeLayout>